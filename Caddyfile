# Dashboard
https://DASHBOARD_SUBDOMAIN.HEADSCALE_BASE_DOMAIN {
        header {
                Access-Control-Allow-Origin https://DASHBOARD_SUBDOMAIN.HEADSCALE_BASE_DOMAIN
		Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE"
	        Access-Control-Allow-Headers *
                Strict-Transport-Security "max-age=31536000;"
                X-XSS-Protection "1; mode=block"
                X-Frame-Options "SAMEORIGIN"
                X-Robots-Tag "none"
                -Server
        }
        reverse_proxy http://headscale-ui
}

# API
https://API_SUBDOMAIN.HEADSCALE_BASE_DOMAIN {
@hs-options {
		host API_SUBDOMAIN.HEADSCALE_BASE_DOMAIN
		method OPTIONS
	}
	@hs-other {
		host API_SUBDOMAIN.HEADSCALE_BASE_DOMAIN
	}
	handle @hs-options {
		header {
			Access-Control-Allow-Origin https://DASHBOARD_SUBDOMAIN.HEADSCALE_BASE_DOMAIN
			Access-Control-Allow-Headers *
			Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE"
		}
		respond 204
	}
	handle @hs-other {
		reverse_proxy http://headscale:8080 {
			header_down Access-Control-Allow-Origin https://DASHBOARD_SUBDOMAIN.HEADSCALE_BASE_DOMAIN
			header_down Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE"
			header_down Access-Control-Allow-Headers *
		}
	}
}